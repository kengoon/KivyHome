<Icon>:
    mipmap: True
    canvas.before:
        Color:
            rgba: (.4, .4, .4, 1) if self.state == 'normal' else (.2, .5, .2, 1)
        RoundedRectangle:
            pos: self.center_x - dp(25), self.center_y - dp(25)
            radius: (dp(10), )
            size: dp(50), dp(50)
        Color:
            rgb: 1, 1, 1
        RoundedRectangle:
            pos: self.center_x - dp(25), self.center_y - dp(25)
            radius: (dp(10), )
            size: dp(50), dp(50)
            source: self.source
        Color:
            rgba: 0, 0, 0, 1
        SmoothLine:
            rounded_rectangle: self.center_x - dp(25), self.center_y - dp(25), dp(50), dp(50), dp(10)
            width: dp(1.5)

<Media>:
    spacing: dp(3)

    StickyButton:
        icon: 'shuffle'
    RegularButton:
        icon: 'back'
    RegularButton:
        icon: 'stop'
    RegularButton:
        icon: 'pause'
    RegularButton:
        icon: 'next'
    StickyButton:
        icon: 'repeat'
